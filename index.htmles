<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dynamic Photo Gallery Menu</title>
  <style>
    body {
      font-family: 'Helvetica Neue', sans-serif;
      background-color: #fafafa;
      color: #333;
      text-align: center;
      padding-top: 60px;
    }

    h1 {
      font-size: 2rem;
      margin-bottom: 40px;
    }

    .gallery-menu {
      display: flex;
      justify-content: center;
      gap: 40px;
      flex-wrap: wrap;
      padding: 20px;
    }

    .gallery-item {
      text-decoration: none;
      color: #333;
      width: 200px;
      transition: transform 0.3s ease;
    }

    .gallery-item:hover {
      transform: scale(1.05);
    }

    .thumbnail {
      width: 100%;
      height: auto;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .caption {
      margin-top: 10px;
      font-size: 1.1rem;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <h1>ðŸ“¸ Select a Gallery</h1>
  <div class="gallery-menu" id="galleryMenu"></div>

  <script>
    // Define your galleries and known first thumbnails manually (we can't read folder contents from static HTML)
    const galleries = [
      {
        name: 'March',
        link: 'March/Phx/index.html',
        thumb: 'March/Phx/thumbs/_7RV1983.jpg'
      },
      {
        name: 'Me',
        link: 'Me/index.html',
        thumb: 'Me/thumbs/cover.jpg'
      }
    ];

    const container = document.getElementById('galleryMenu');

    galleries.forEach(gallery => {
      const anchor = document.createElement('a');
      anchor.className = 'gallery-item';
      anchor.href = gallery.link;

      anchor.innerHTML = `
        <img class="thumbnail" src="${gallery.thumb}" alt="${gallery.name} Thumbnail">
        <div class="caption">${gallery.name}</div>
      `;

      container.appendChild(anchor);
    });
  </script>

</body>
</html>
